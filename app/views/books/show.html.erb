<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @booknew %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@user) do %>
            <%= image_tag @user.get_profile_image, size:"100x100" %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <!--タグ検索機能実装-->
          <td>
            <% @book_tags.each do |tag| %>
              <%= link_to tag.name, search_tag_path(tag_id: tag.id) %> 
              <%= "(#{tag.books.count})" %>
            <% end %> 
          </td>
          <td id="favorites_buttons_<%= @book.id %>" >
            <%= render 'favorites/favorite', book: @book %>
          </td>
          <td id="comments_number"><%= render 'book_comments/number', book: @book %></td>
          <td><%= render 'static_rate', book: @book %></td>
          <td>
            <% if @user == current_user %>
            <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %>
            <% end %>
          </td>
          <!--<td>%= render "static_rate", book: @book %></td>-->
          <td>
            <% if @user == current_user %>
            <%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%>
            <% end %>
          </td>
        </tr>
      </table>
      <div id="comments_area">
        <%= render 'book_comments/comment', book: @book %>
      </div>
      <div id="comments_form">
        <%= render 'book_comments/form', book: @book, book_comment: @book_comment %>
      </div>
    </div>
  </div>
</div>

